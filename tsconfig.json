    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./lib",
    "pretty": true,
    "rootDirs": [
      "./src"
    ],
    "strict": true,
    "target": "es2017",
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": [
    "./src/**/*"
  ],
}
